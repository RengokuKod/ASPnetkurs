@model IEnumerable<BlazorApp2.Models.Rabotnik>

@{
    ViewData["Title"] = "Index";
}

<h1>Работники</h1>

<p>
  
    <a type="button" class="btn btn-dark n" asp-action="Create">Добавить работника</a>
  
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Фамилия)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Имя)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Отчество)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Рост)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Должность)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Стаж)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Планета_происхождения)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Образование)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Возраст)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Фото)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Фамилия)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Имя)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Отчество)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Рост)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Должность)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Стаж)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Планета_происхождения)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Образование)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Возраст)
            </td>
            <td>
                    <img class="db" src="@Url.Content("~/"+item.Фото)" alt="Фото работника" />
            </td>
            <td>
                <div class="n">
                        <a asp-action="Edit" class="n" asp-route-id="@item.id">Изменить</a> |
                        <a asp-action="Details" class="n" asp-route-id="@item.id">Детали</a> |
                        <a asp-action="Delete" class="n" asp-route-id="@item.id">Удалить</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
